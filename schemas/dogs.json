{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "dogs": {
            "$id": "#dogs",
            "title": "Dogs",
            "description": "Data to get dogs",
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "type": {
                    "type": "string"
                },
                "location": {
                    "type": "string"
                },
                "avilable": {
                    "type": "boolean"
                },
                "dateAdded": {
                    "type": "string",
                    "format": "date-time"
                },
                "dateUpdated": {
                    "type": "string",
                    "format": "date-time"
                },
                "_id": {
                    "type": "string",
                    "pattern": "^[0-9a-fA-F]{24}$"
                }
            },
            "required": [
                "name",
                "type",
                "location",
                "avilable"
            ]
        },
        "additionalProperties": false
    }
}